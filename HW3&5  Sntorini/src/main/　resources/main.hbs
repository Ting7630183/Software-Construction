<!DOCTYPE html>


<head>
  <title>Santorini</title>
  <style>
    #board {
      display: grid;
      grid-template-columns: auto auto auto auto auto;
      background-color: #2196F3;
      padding: 5px
    }

    .cell {
      background-color: rgba(255, 255, 255, 0.8);
      border: 1px solid rgba(0, 0, 0, 0.8);
      padding: 5px;
      font-size: 17px;
      height: 10vmin;
      text-align: center;
    }

    #bottombar {
      height: 5vh;
    }

    #instructions {
      height: 5vh;
      background-color: white;
      padding: 0px;
      margin: 0px;
      text-align: center;
      border: 1px solid black;
    }

    #bottombar button {
      width: 50%;
      height: 100%;
      margin: 0;
      padding: 0;
      position: relative;
      float: left;
      font-size: 2vw
    }


    #bottombar:hover{
              background-color:peachpuff;
          }

    html,
    body {
      height: 100%;
      margin: 0;
      padding: 0;
    }

    .playable { background-color: paleturquoise;}
  </style>
</head>

<body>
<div id="info">
<a id="instructions">{{instructions}}</a>
</div>

<div>
  <p> Select God Card Here:</p>
  <a href="/godCardPan"><button>Pan</button></a>
  <a href="/godCardMinotaur"><button>Minotaur</button></a>
  <a href="/godCardAthena"><button>Athena</button></a>
  <a href="/godCardDemeter"><button>Demeter</button></a>
  <a href="/godCardApollo"><button>Apollo</button></a>

</div>

<div id="board">
  {{#each cells}}
  <a href={{link}}><div class="cell {{clazz}}">{{text}} {{height}}</div></a>
  {{/each}}
</div>

<div id="bottombar">
  <a href="/newgame"><button>NEW GAME</button></a>
  <a href="/skip"><button>SKIP</button></a>
</div>

<div>
<p> Select Block or Dome Here: </p>
  <a href="/block"><button>block</button></a>
  <a href="/dome"><button>dome</button></a>
</div>

</body>

<!-- import the the tic.ts file generated by browserify -->
<script src="tic.js"></script>

</html>